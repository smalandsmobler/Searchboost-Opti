# Server Configuration
PORT=3000
NODE_ENV=development

# Base URL for SEO and canonical URLs
BASE_URL=http://localhost:3000

# Abicart API Configuration
# Official endpoint: https://admin.abicart.se/backend/jsonrpc/v1/
ABICART_API_URL=https://admin.abicart.se/backend/jsonrpc/v1
ABICART_API_KEY=your_auth_token_here
ABICART_SHOP_ID=your_shop_id_here

# Auto-Publishing Configuration
# Enable automatic daily blog post publishing
ENABLE_AUTO_PUBLISH=true

# Cron schedule for publishing (default: 9:00 AM daily)
# Format: minute hour day month dayOfWeek
# Examples:
#   "0 9 * * *"  - Every day at 9:00 AM
#   "0 12 * * *" - Every day at noon
#   "0 8 * * 1"  - Every Monday at 8:00 AM
PUBLISH_SCHEDULE=0 9 * * *

# Optional: Cache settings (in seconds)
CACHE_TTL=300
